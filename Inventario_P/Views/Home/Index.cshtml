@{
    ViewData["Title"] = "Home Page";
}

<body style="background: url('https://media.gettyimages.com/id/1469875556/es/v%C3%ADdeo/fondo-de-l%C3%ADneas-abstractas-4k-loopable.jpg?s=640x640&k=20&c=VKM-5Fe6vYWW_fp_ZkqOwYLPnszs47JP6UJoMSSO2IQ=') no-repeat center center/cover">
<!-- HEADER -->
<header class="bg-danger text-white shadow fixed-top py-3">
    <div class="container d-flex align-items-center justify-content-center gap-3">
        <img src="~/Imagenes/Logo NeoMarket.png" alt="Logo Librarium Culturae" class="logo img-fluid" width="90" height="90">
        <h2 class="m-0 fw-bold">NeoMarket</h2>
    </div>
</header>

<br>
<br>
<main>
    <!-- TÍTULO -->
    <section class="pt-5 mt-5 text-center">
        <h1 class="principal-login text-light fw-bold">Bienvenido usuario</h1>
    </section>
    <br>
    <!-- MAIN LOGIN -->
    <main class="flex-grow-1 d-flex align-items-center justify-content-center py-4">
        <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
            <h2 class="text-center text-warning mb-4">Inicio de Sesión</h2>
            <form method="post" action="login.php" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="useremail" class="form-label fw-semibold">Ingrese su Usuario</label>
                    <input type="text" class="form-control" id="useremail" name="usuario" placeholder="Ingrese usuario" autocomplete="username" required>
                    <div class="invalid-feedback">Por favor ingrese un usuario válido.</div>
                </div>

                <div class="mb-3">
                    <label for="userpassword" class="form-label fw-semibold">Ingrese Contraseña</label>
                    <input type="password" class="form-control" id="userpassword" name="clave" placeholder="Ingrese contraseña" autocomplete="current-password" required>
                    <div class="invalid-feedback">Debe ingresar una contraseña.</div>
                </div>

                <button type="submit" class="btn btn-danger w-100">Iniciar Sesión</button>
            </form>
        </div>
    </main>

    <br>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <!-- Logo + texto -->
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <img src="~/Imagenes/Logo NeoMarket.png" alt="Logo" width="90" class="me-2">
                    © Derechos reservados - 2025
                </div>
                <!-- Redes -->
                <div class="col-md-6">
                    <div class="d-flex justify-content-center justify-content-md-end gap-3">
                        <a href="https://www.youtube.com/watch?v=4KoU144az18" target="_blank">
                            <img src="~/Imagenes/Facebook_logo_(square).png" alt="YouTube" width="50">
                        </a>
                        <a href="https://www.instagram.com/_filosofarte?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==" target="_blank">
                            <img src="~/Imagenes/Instagram_icon.png" alt="Instagram" width="35">
                        </a>
                        <a href="#" target="_blank">
                            <img src="~/Imagenes/Gmail_icon_(2020).svg.png" alt="Gmail" width="40">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

</body>