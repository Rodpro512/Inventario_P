<div class="card shadow-lg border-0">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Formulario de Producto</h5>
    </div>
    <div class="card-body">

        <div class="accordion accordion-flush" id="accordionFlushExample">

            <!-- Formulario dentro del acordeón -->
            <form class="was-validated">

                <!-- Item 1 con los campos del formulario -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                            Datos del Producto
                        </button>
                    </h2>
                    <div id="flush-collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">

                            <!-- ID Producto -->
                            <div class="mb-3">
                                <label for="idProducto" class="form-label">ID Producto</label>
                                <input type="text" class="form-control" id="idProducto" placeholder="Ingrese el ID del producto" required>
                                <div class="invalid-feedback">
                                    Por favor, ingrese el ID del producto.
                                </div>
                            </div>

                            <!-- Fecha de salida -->
                            <div class="mb-3">
                                <label for="fechaSalida" class="form-label">Fecha de Salida del Producto</label>
                                <input type="date" class="form-control" id="fechaSalida" required>
                                <div class="invalid-feedback">
                                    Por favor, seleccione la fecha de salida.
                                </div>
                            </div>

                            <!-- Cantidad -->
                            <div class="mb-3">
                                <label for="cantidad" class="form-label">Cantidad</label>
                                <input type="number" class="form-control" id="cantidad" placeholder="Ingrese la cantidad" required>
                                <div class="invalid-feedback">
                                    Por favor, ingrese la cantidad.
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Item 2 -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                            Observaciones
                        </button>
                    </h2>
                    <div id="flush-collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                            <!-- Descripcion producto -->
                            <div class="mb-3">
                                <label for="descripcionProducto" class="form-label">Detalles adicionales</label>
                                <input type="text" class="form-control" id="descripcionProducto"
                                       placeholder="Ingrese algún detalle adicional (opcional)">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botón de enviar -->
                <div class="d-grid gap-2 mt-3">
                    <button class="btn btn-danger" type="submit">Enviar Datos</button>
                </div>

            </form>
        </div>

    </div>
</div>

